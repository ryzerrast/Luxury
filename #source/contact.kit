<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Contact</title>
   <link rel="stylesheet" href="css/simple-line-icons.css">
   <link rel="stylesheet" href="css/style.css">
</head>

<body>
   <div class="wrapper">
      <!-- Header -->
      <!-- @import 'header.html' -->
      <!-- Main-screen -->
      <div class="contact-screen">
         <h1 class="contact-screen__title">Contact Us</h1>
         <div class="contact-screen__bg ibg">
            <img src="img/contactUs/bg.jpg" alt="">
         </div>
      </div>
      <!-- Content -->
      <div class="content">
         <!-- Contact -->
         <div class="contact">
            <div class="contact__body">
               <div class="contact__row">
                  <div class="container">
                     <h2 class="contact__title">Contact Details</h2>
                     <div class="contact-details">
                        <div class="contact-details__column">
                           <div class="contact-details__icon">
                              <a target="_blank" href="https://www.google.com/maps/d/u/0/viewer?hl=en&ie=UTF8&msa=0&ll=36.102376%2C-118.54247999999998&spn=17.029076%2C29.003906&z=6&mid=1fjs9W8m39lt04PkjLCZPwV2_S5o">
                                 <span class="icon-map"></span>
                              </a>
                           </div>
                           <div class="contact-details__block">
                              <h3 class="contact-details__title">Address</h3>
                              <a target="_blank" href="https://www.google.com/maps/d/u/0/viewer?hl=en&ie=UTF8&msa=0&ll=36.102376%2C-118.54247999999998&spn=17.029076%2C29.003906&z=6&mid=1fjs9W8m39lt04PkjLCZPwV2_S5o">
                                 <address class="contact-details__address">
                                    <p>Luxury Restaurent</p>
                                    <p>California Second Street</p>
                                    <p>2nd floor</p>
                                 </address>                                 
                              </a>
                           </div>
                        </div>
                        <div class="contact-details__column">
                           <div class="contact-details__icon">
                              <a href="tel:91855558659">
                                 <span class="icon-phone"></span>
                              </a>
                           </div>
                           <div class="contact-details__block">
                              <h3 class="contact-details__title">Phone</h3>
                              <a href="tel:91855558659" class="contact-details__tel">+91 855 558 659</a>
                           </div>
                           <div class="contact-details__block">
                              <label for="">Email:</label>
                              <a href="email:info@luxury.com" class="contact-details__email">info@luxury.com</a>
                           </div>
                        </div>
                        <div class="contact-details__column">
                           <div class="contact-details__icon">
                              <a href="https://github.com/ryzerrast/luxury" target="_blank">
                                 <span class="icon-share"></span>
                              </a>
                           </div>
                           <div class="contact-details__block">
                              <h3 class="contact-details__title">Follow us</h3>
                              <div class="contact-details-social">
                                 <a href="https://www.linkedin.com/in/dmitry-zakhoda/" target="_blank" class="icon-social-linkedin contact-details-social__link"></a>
                                 <a href="https://github.com/ryzerrast" target="_blank" class="icon-social-github contact-details-social__link"></a>
                              </div>
                           </div>
                        </div>
                     </div>                        
                  </div>
               </div>
               <div class="contact__row">
                  <div class="container">
                     <h2 class="contact__title">Get in touch</h2>
                     <form id="contact-form" action="#" class="contact-form form">
                        <div class="contact-form__row">
                           <div class="contact-form__column">
                              <div class="contact-form__block">
                                 <input placeholder="Name*" type="text" class="contact-form__input _req _name">
                                 <span class="icon-user"></span>
                              </div>
                           </div>
                           <div class="contact-form__column">
                              <div class="contact-form__block">
                                 <input placeholder="Email*" type="text" class="contact-form__input _req _email">
                                 <span class="icon-envelope"></span>
                              </div>
                           </div>
                        </div>
                        <div class="contact-form__row">
                           <div class="contact-form__block">
                              <textarea placeholder="Message*" type="text" class="contact-form__input contact-form__input_a"></textarea>
                              <span class="icon-bubbles"></span>
                           </div>
                        </div>
                        <button form="contact-form" type="submit" class="contact-form__btn">Send now</button>
                     </form>                        
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- @import 'footer.html' -->
   </div>
   <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
   <script src="js/main.js"></script>
</body>

</html>